# Terraform Indexer Configuration
# Cloud/Production mode configuration

# Application mode: "local" or "cloud"
MODE=cloud

# S3 Configuration (for real AWS S3)
S3_BUCKETS=terraform-states,terraform-backup-states
S3_POLL_INTERVAL=30
# S3_ENDPOINT_URL=  # Leave empty for real AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Filesystem Configuration (disabled in cloud mode)
FILESYSTEM_ENABLED=false

# Elasticsearch Configuration
ES_HOSTS=http://localhost:9200
ES_INDEX=terraform-resources
ES_BATCH_SIZE=100
ES_BATCH_TIMEOUT=10